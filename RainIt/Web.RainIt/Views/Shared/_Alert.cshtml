<div id="myAlert" class="alert" role="alert" style="display: none;">
    
</div>
<script type="text/javascript">
    (function() {
        this.AlertProperties = this.AlertProperties || {};
        AlertProperties.Show = function () {
            $('#myAlert').show(400, "linear");
        }
        AlertProperties.Hide = function () {
            $('#myAlert').hide(400, "linear");
        }
        function resetToDefault() {
            $('#myAlert').removeClass();
            $('#myAlert').addClass("alert");
            $('#myAlert').html('');
        }
        function setClass(newClass) {
            $('#myAlert').addClass(newClass);
        }
        function setContent(content) {
            var contentLength = content.length;
            var list = $("<ul>");
            for (var i = 0; i < contentLength; i++) {
                var element = $("<li>").html(content[i]);
                element.appendTo(list);
            }
            list.appendTo($('#myAlert'));
        }

        function addContent(content) {
            var contentLength = content.length;
            var list = $("ul").length ? $("ul") : $("<ul>");
            for (var i = 0; i < contentLength; i++) {
                var element = $("<li>").html(content[i]);
                element.appendTo(list);
            }
            if (!$("ul").length) {
                list.appendTo($('#myAlert'));
            }
        }
        function initialize(parameters) {
            if (!$('#myAlert').is(":visible")) {
                resetToDefault();
                setClass(parameters.Class);
                setContent(parameters.Content);
            } else {
                AlertProperties.Hide();
                addContent(parameters.Content);
            }
            AlertProperties.Show();
        }

        AlertProperties.Initialize = function (parameters) {
            initialize(parameters);
            $(document).off("click");
            setTimeout(function() {
                $(document).click(function () {
                    if ($('#myAlert').is(":visible")) {
                        AlertProperties.Hide();
                    }
                });
            }, 500);
        }
    }());    
</script>