@using Newtonsoft.Json
@model List<RainIt.Domain.DTO.DeviceDTO>
@{
    ViewBag.Title = "All Devices";
}
<div class="container">
    <div class="col-md-12">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        Device Name
                    </th>
                    <th>
                        Active Routines
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var device in Model)
                {
                    <tr>
                        <td>
                            @device.Name
                        </td>
                        <td>
                            @foreach (var routine in device.RoutineDTOs)
                            {
                                @Html.ActionLink(routine.Name, "Edit", "Routine", new {area = "Configuration", routineId = routine.RoutineId}, null)
                            }
                            &nbsp;
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
    @using (Html.BeginForm("Add", "Device", new {area = "Configuration"}, FormMethod.Get))
    {
        <button type="submit" id="addDevice" name="addDeviceButton">Add Device</button>
    }
</div>