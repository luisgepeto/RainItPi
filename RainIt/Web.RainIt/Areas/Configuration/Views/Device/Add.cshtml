@model RainIt.Domain.DTO.DeviceDTO
@{
    ViewBag.Title = "Add Device";
}
<div class="container" style="margin-top: 50px;">
    @using (Html.BeginForm("Add", "Device", new { area = "Configuration" }, FormMethod.Post))
    {
        <table>
            <tbody>
            <tr>
                <td>
                    Device Identifier:
                </td>
                <td>
                    @Html.EditorFor(model => model.Identifier)
                </td>
            </tr>
            </tbody>
        </table>
        <button type="submit" id="addDevice" name="addDeviceButton">Confirm</button>
    }
    <button type="submit" id="cancelAdd" name="cancelAddDeviceButton">Cancel</button>
</div>
